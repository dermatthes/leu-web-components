{
  "name": "@leu/leu-web-components",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "module": "dist/index",
  "type": "module",
  "directories": {
    "doc": "docs",
    "lib": "dist"
  },
  "scripts": {
    "watch": "esbuild src/index.ts --bundle --serve=0.0.0.0:4000 --outdir=docs/js --servedir=docs",
    "make.mjs": "tsc -d && mv dist/index.js dist/index.mjs",
    "make.cjs": "tsc -m commonjs && mv dist/index.js dist/index.cjs",
    "build": "npm run make.mjs && npm run make.cjs && esbuild src/index.ts --bundle --minify --outfile=./dist/leu-web-components.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "workspaces/kasi-embed"
  ],
  "author": "",
  "dependencies": {
    "@kasimirjs/embed": "git+https://github.com/kasimirjs/kasi-embed.git#main",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3"
  },
  "devDependencies": {
    "@types/jest": "*",
    "esbuild": "^0.15.10",
    "esbuild-jest": "^0.5.0",
    "esbuild-loader": "^2.20.0",
    "jest-environment-jsdom": "*",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "*",
    "webpack-cli": "*",
    "webpack-dev-server": "*"
  }
}
